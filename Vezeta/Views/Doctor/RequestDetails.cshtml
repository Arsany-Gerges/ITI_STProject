@model PendingRequestViewModel

@{
    ViewData["Title"] = "Request Details";
}

<h1>Request Details</h1>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>Appointment Request Details</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Doctor Name:</strong>
                </div>
                <div class="col-md-8">
                    @Model.PatientName
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Specialization:</strong>
                </div>
                <div class="col-md-8">
                    @Model.Specialization
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Request Date:</strong>
                </div>
                <div class="col-md-8">
                    @Model.RequestDate.ToShortDateString()
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Status:</strong>
                </div>
                <div class="col-md-8">
                    @Model.Status
                </div>
            </div>
            @if (Model.AppointmentDate.HasValue)
            {
                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Appointment Date:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.AppointmentDate.Value.ToShortDateString()
                    </div>
                </div>
            }
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Symptoms:</strong>
                </div>
                <div class="col-md-8">
                    @Model.Symptoms
                </div>
            </div>
            @if (Model.Status == "Pending")
            {
                <form asp-action="AcceptRequest" method="post">
                    <input type="hidden" name="requestId" value="@Model.AppointmentRequestId" />
                    <div class="form-group">
                        <label for="appointmentDate">Appointment Date</label>
                        <input type="date" id="appointmentDate" name="appointmentDate" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-success">Accept</button>
                </form>

                <form asp-action="RejectRequest" method="post" class="mt-2">
                    <input type="hidden" name="requestId" value="@Model.AppointmentRequestId" />
                    <button type="submit" class="btn btn-danger">Reject</button>
                </form>
            }
        </div>
        <div class="card-footer">
            <a href="@Url.Action("Index", "Doctor" ,new { id = ViewBag.DoctorId })" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>
</div>
